### GENERAL CONFIG  ###
## gitlint의 일반 설정입니다.
## 문서: https://jorisroovers.com/gitlint/latest/configuration/gitlint_file/
## Conventional Commits 명세: https://www.conventionalcommits.org/en/v1.0.0/

[general]
# ID나 이름으로 특정 규칙을 무시합니다 (쉼표로 구분된 리스트).
ignore=title-trailing-punctuation, T3, B6

# gitlint의 출력에 대한 상세 수준을 설정합니다. 유효한 값은 1에서 3 사이입니다.
verbosity = 2

# 특정 유형의 커밋을 무시할지 여부를 지정합니다.
ignore-merge-commits=true
ignore-revert-commits=true
ignore-fixup-commits=true
ignore-fixup-amend-commits=true
ignore-squash-commits=true

# 표준 입력(stdin)을 통해 gitlint에 전달된 데이터를 무시합니다.
ignore-stdin=true

# 커밋 메시지를 수동으로 전달할 때 로컬 저장소에서 추가 메타데이터를 가져옵니다.
staged=true

# 검토할 커밋이 없는 경우 에러로 실패합니다.
fail-without-commits=true

# 정규 표현식 규칙에서 Python의 `search` 의미론을 `match` 대신 사용합니다.
regex-style-search=true

# 커뮤니티에서 제공하는 규칙을 활성화합니다.
contrib=contrib-title-conventional-commits

# gitlint가 사용자 정의 규칙을 검색할 추가 경로를 설정합니다.
# extra-path=examples/

### RULE CONFIGURATION ###
# 커밋 메시지 검토를 위한 규칙과 그 구성을 정의합니다.

# [title-max-length]
# 커밋 메시지 제목의 최대 길이입니다.
line-length=80

# [title-min-length]
# 커밋 메시지 제목의 최소 길이입니다.
min-length=5

# [title-must-not-contain-word]
# 커밋 메시지 제목에 포함되지 않아야 하는 단어의 리스트입니다 (대소문자 구분 없음).
words=wip,foobar

# [title-match-regex]
# 커밋 메시지 제목이 맞춰야 하는 정규 표현식입니다.
regex=^US[0-9]*

# [body-max-line-length]
# 커밋 메시지 본문에서 한 줄의 최대 길이입니다.
line-length=120

# [body-min-length]
# 커밋 메시지 본문의 최소 길이입니다.
min-length=5

# [body-is-missing]
# 이 규칙을 병합 커밋에서 무시할지 여부를 설정합니다.
ignore-merge-commits=false

# [body-changed-file-mention]
# 변경된 파일이 커밋 메시지 본문에 명시적으로 언급되어야 합니다.
files=gitlint-core/gitlint/rules.py,README.md

# [body-match-regex]
# 커밋 메시지 본문이 맞춰야 하는 정규 표현식입니다.
regex=My-Commit-Tag: foo$

# [author-valid-email]
# 작성자의 이메일 주소를 검증합니다. 예를 들어, foo.com에서 오는 이메일 주소만 허용합니다.
regex=[^@]+@foo.com

### NAMED RULES ###
# 특정 이름으로 추가 규칙을 정의합니다.

# [title-must-not-contain-word:Additional-Words]
# 커밋 메시지 제목에 포함되지 않아야 하는 추가 단어의 리스트입니다.
words=foo,bar

### CONTRIB RULES ###
# 커뮤니티에서 제공하는 규칙을 정의합니다.

[contrib-title-conventional-commits]
# Conventional Commits에 따라 유효한 커밋 메시지 유형을 정의합니다.
types = fix,feat,chore,docs,style,refactor,perf,test,revert,ci,build

### USER DEFINED RULES ###
# 사용자 정의 규칙을 정의합니다.

# [body-max-line-count]
# 커밋 메시지 본문에서 최대 줄 수를 설정합니다.
max-line-count = 5

### IGNORE RULES CONFIGURATION ###
# 제목, 본문 또는 작성자에 따라 특정 커밋을 무시하는 규칙을 정의합니다.

# [ignore-by-title]
# 제목이 정규 표현식과 일치하는 커밋에 대한 규칙을 무시합니다.
# regex=^Release(.*)
# ignore=T1,body-min-length

# [ignore-by-body]
# 본문에 정규 표현식과 일치하는 줄이 포함된 커밋에 대한 규칙을 무시합니다.
# regex=(.*)release(.*)
# ignore=T1,body-min-length

# [ignore-body-lines]
# 'Co-Authored-By'로 시작하는 모든 줄을 무시합니다.
# regex=^Co-Authored-By

# [ignore-by-author-name]
# 작성자 이름이 정규 표현식과 일치하는 커밋에 대한 규칙을 무시합니다.
# regex=(.*)dependabot(.*)
# ignore=T1,body-min-length
